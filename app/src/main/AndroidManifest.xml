<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rememberme.io.rememberme">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Network.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity android:name=".Main.MainActivity" />
        <activity android:name=".User.SignupActivity" />
        <activity android:name=".User.LoginActivity" />
        <activity android:name=".Splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Trip.TripActivity" />
        <activity android:name=".Trip.TripCalendarActivity" />
        <activity android:name=".Day.DayActivity" />
        <activity android:name=".Spot.SpotActivity" />
        <activity android:name=".Main.RightMainActivity"></activity>
        <activity android:name=".Main.LeftMainActivity"></activity>
        <activity android:name=".Photo.PhotoActivity"/>
    </application>
</manifest>